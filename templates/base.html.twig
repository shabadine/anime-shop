<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Anime Goodies Shop - Les meilleurs produits dérivés de vos animes préférés">
    <title>{% block title %}Anime Goodies Shop{% endblock %}</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('css/accessibility.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Skip to main content (accessibilité) -->
    <a href="#main-content" class="skip-to-main">Aller au contenu principal</a>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" role="navigation" aria-label="Navigation principale">
        <div class="container">
             <img src="{{ asset('images/logo.svg') }}" alt="anime shop" width="49" height="40" loading="lazy">
            <a class="navbar-brand" href="{{ path('app_home') }}" aria-label="Retour à l'accueil">
                ANIME SHOP
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Basculer la navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home') }}" 
                        {% if app.request.attributes.get('_route') == 'app_home' %}aria-current="page"{% endif %}> 
                        <i class="bi bi-shop"></i> Accueil
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_catalog') }}" 
                        {% if app.request.attributes.get('_route') starts with 'app_catalog' %}aria-current="page"{% endif %}>
                        <i class="bi bi-card-list"></i> Catalogue
                        </a>
                    </li>

                    {# Ajout du lien Contact #}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_contact') }}" 
                        {% if app.request.attributes.get('_route') == 'app_contact' %}aria-current="page"{% endif %}>
                        <i class="bi bi-envelope"></i> Contact
                        </a>
                    </li>

                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_account') }}" 
                            {% if app.request.attributes.get('_route') starts with 'app_account' %}aria-current="page"{% endif %}>
                            <i class="bi bi-person-circle"></i> Mon compte
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_dashboard') }}" 
                                {% if app.request.attributes.get('_route') starts with 'admin' %}aria-current="page"{% endif %}>
                                <i class="bi bi-gear-fill"></i> Admin
                                </a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">
                                <i class="bi bi-box-arrow-right"></i> Déconnexion
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">
                                <i class="bi bi-box-arrow-in-right"></i> Connexion
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">
                                <i class="bi bi-person-plus"></i> Inscription
                            </a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_cart_index') }}" aria-label="Panier avec {{ cart_item_count() }} articles">
                              <i class="bi bi-cart3"></i> Panier 
                            (<span class="cart-count">{{ cart_item_count() }}</span>)
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash messages -->
    {% for label, messages in app.flashes %}
        <div class="container mt-3">
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endfor %}
        </div>
    {% endfor %}

    <!-- Main Content -->
    <main id="main-content" role="main">
        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5 py-4" role="contentinfo">
        <div class="container text-center">
             <img src="{{ asset('images/logo.svg') }}" alt="anime shop" width="49" height="40" loading="lazy">
            <p class="mb-2">&copy; {{ "now"|date("Y") }} Anime Goodies Shop - Tous droits réservés</p>
            <p class="mb-0 small">Projet DWWM - Shabadine Bah</p>
            <nav aria-label="Navigation secondaire">
                <ul class="list-inline mt-3">
                    <li class="list-inline-item"><a href="{{ path('app_legal') }}" class="text-white">Mentions légales</a></li>
                    <li class="list-inline-item"><a href="{{ path('app_cgv') }}" class="text-white">CGV</a></li>
                    <li class="list-inline-item"><a href="{{ path('app_contact') }}" class="text-white">Contact</a></li>
                </ul>
            </nav>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="{{ asset('js/main.js') }}"></script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>