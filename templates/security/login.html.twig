{% extends 'base.html.twig' %}

{% block title %}Connexion - Anime Shop{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
           
            <div class="card shadow user-auth-form">
                <div class="card-body p-4 p-md-5">
                    <h1 class="text-center mb-4">
                        <i class="bi bi-box-arrow-in-right user-auth-icon me-2"></i>Connexion
                    </h1>
                    
                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="alert alert-info">
                            Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>, 
                            <a href="{{ path('app_logout') }}" class="alert-link">Se déconnecter</a>
                        </div>
                    {% endif %}

                     <form method="post" action="{{ path('app_login') }}">
                        <div class="mb-3">
                            <label for="email" class="form-label fw-bold">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-envelope text-muted"></i>
                                </span>
                                <input
                                    type="email"
                                    name="email"
                                    id="email"
                                    value="{{ last_username }}"
                                    class="form-control"
                                    autocomplete="email"
                                    required
                                    placeholder="nom@exemple.com"
                                >
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label fw-bold">Mot de passe</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-lock text-muted"></i>
                                </span>
                                <input
                                    type="password"
                                    name="password"
                                    id="password"
                                    class="form-control"
                                    autocomplete="current-password"
                                    required
                                    placeholder="••••••••"
                                >
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" class="btn btn-danger btn-lg w-100 fw-bold">
                            Se connecter
                        </button>
                    </form>


                    <hr class="my-4">
                    
                    <p class="text-center text-dark mb-0">
                        Pas encore de compte ? <a href="{{ path('app_register') }}" class="fw-bold">S'inscrire</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}