{% extends 'admin/base.html.twig' %}

{% block title %}{{ product.id ? 'Modifier' : 'Nouveau' }} produit{% endblock %}

{% block admin_content %}
<h1>{{ product.id ? 'Modifier' : 'Nouveau' }} produit</h1>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_row(form.animeName) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_row(form.description) }}
            </div>

            <div class="row">
                <div class="col-md-3 mb-3">
                    {{ form_row(form.price) }}
                </div>
                <div class="col-md-3 mb-3">
                    {{ form_row(form.pricePromotion) }}
                </div>
                <div class="col-md-3 mb-3">
                    {{ form_row(form.stock) }}
                </div>
                <div class="col-md-3 mb-3">
                    {{ form_row(form.category) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_row(form.imageFile) }}
                {% if product.image %}
                    <img src="{{ asset('uploads/products/' ~ product.image) }}" alt="" style="max-width: 200px; margin-top: 10px;">
                {% endif %}
            </div>

            <div class="mb-3">
                {{ form_row(form.featured) }}
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary">{{ product.id ? 'Modifier' : 'Cr√©er' }}</button>
                <a href="{{ path('admin_product_index') }}" class="btn btn-secondary">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}