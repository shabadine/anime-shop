{% extends 'admin/base.html.twig' %}

{% block title %}{{ product.name }} - Détails{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-box-seam me-2"></i> {{ product.name }}</h1>
    <a href="{{ path('admin_product_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Retour à la liste
    </a>
</div>

<div class="row g-4">
    <!-- Image -->
    <div class="col-md-5">
        <div class="card shadow-sm">
            <div class="card-header admin-detail-header">
                <h5 class="mb-0"><i class="bi bi-image me-1"></i> Image produit</h5>
            </div>
            <div class="card-body text-center">
                {% if product.image %}
                    <img src="{{ asset('uploads/products/' ~ product.image) }}" 
                         alt="{{ product.name }}" 
                         class="img-fluid rounded shadow-lg">
                {% else %}
                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 300px;">
                        <span class="text-muted"><i class="bi bi-card-image display-1"></i><br>Aucune image</span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Infos -->
    <div class="col-md-7">
        <div class="card shadow-sm">
            <div class="card-header admin-detail-header">
                <h5 class="mb-0"><i class="bi bi-info-circle me-1"></i> Informations</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold"><i class="bi bi-hash me-1"></i> ID</div>
                    <div class="col-sm-8">{{ product.id }}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold"><i class="bi bi-tag me-1"></i> Nom</div>
                    <div class="col-sm-8">{{ product.name }}</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold"><i class="bi bi-film me-1"></i> Anime</div>
                    <div class="col-sm-8"><span class="badge bg-secondary">{{ product.animeName }}</span></div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold"><i class="bi bi-folder me-1"></i> Catégorie</div>
                    <div class="col-sm-8"><span class="badge bg-primary">{{ product.category.name }}</span></div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold"><i class="bi bi-currency-euro me-1"></i> Prix</div>
                    <div class="col-sm-8"><strong class="text-danger fs-5">{{ product.price }} €</strong></div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold"><i class="bi bi-boxes me-1"></i> Stock</div>
                    <div class="col-sm-8">
                        {% if product.stock > 0 %}
                            <span class="badge bg-success fs-6">{{ product.stock }}</span>
                        {% else %}
                            <span class="badge bg-danger fs-6">Rupture</span>
                        {% endif %}
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-4 fw-bold"><i class="bi bi-star me-1"></i> En avant</div>
                    <div class="col-sm-8">
                        {% if product.featured %}
                            <span class="badge bg-warning text-dark fs-6"><i class="bi bi-star-fill"></i> Oui</span>
                        {% else %}
                            <span class="text-muted"><i class="bi bi-star"></i> Non</span>
                        {% endif %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 fw-bold"><i class="bi bi-card-text me-1"></i> Description</div>
                    <div class="col-sm-8">
                        <div class="bg-light p-3 rounded mt-2">
                            {{ product.description|raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="card shadow-sm mt-3">
            <div class="card-body d-flex gap-3">
                <a href="{{ path('admin_product_edit', {id: product.id}) }}" class="btn btn-lg btn-warning px-4">
                    <i class="bi bi-pencil-square me-2"></i> Modifier
                </a>
                <form method="post" action="{{ path('admin_product_delete', {id: product.id}) }}" 
                      onsubmit="return confirm('Supprimer ce produit ?');" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                    <button class="btn btn-lg btn-danger px-4">
                        <i class="bi bi-trash me-2"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}