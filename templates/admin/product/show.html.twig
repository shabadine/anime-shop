{% extends 'admin/base.html.twig' %}

{% block title %}{{ product.name }} - Détails{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>{{ product.name }}</h1>
    <a href="{{ path('admin_product_index') }}" class="btn btn-secondary">
        ← Retour à la liste
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        {% if product.image %}
            <img src="{{ asset('uploads/products/' ~ product.image) }}"
                 alt="{{ product.name }}"
                 class="img-fluid rounded shadow-sm">
        {% else %}
            <div class="bg-light rounded d-flex align-items-center justify-content-center shadow-sm"
                 style="height: 300px;">
                <span class="text-muted">Aucune image</span>
            </div>
        {% endif %}
    </div>

    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tr><th>ID</th><td>{{ product.id }}</td></tr>
                    <tr><th>Nom</th><td>{{ product.name }}</td></tr>
                    <tr><th>Anime</th><td>{{ product.animeName }}</td></tr>
                    <tr><th>Catégorie</th><td>{{ product.category.name }}</td></tr>
                    <tr><th>Prix</th><td><strong>{{ product.price }} €</strong></td></tr>
                    <tr><th>Stock</th>
                        <td>
                            {% if product.stock > 0 %}
                                <span class="badge bg-success">{{ product.stock }}</span>
                            {% else %}
                                <span class="badge bg-danger">Rupture</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr><th>En avant</th>
                        <td>
                            {% if product.featured %}
                                <span class="badge bg-warning">Oui</span>
                            {% else %}
                                <span class="badge bg-secondary">Non</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr><th>Description</th><td>{{ product.description|raw }}</td></tr>
                </table>

                <div class="mt-4">
                    <a href="{{ path('admin_product_edit', {id: product.id}) }}" class="btn btn-warning">
                        Modifier
                    </a>
                    <form method="post" action="{{ path('admin_product_delete', {id: product.id}) }}"
                          onsubmit="return confirm('Supprimer ce produit ?');" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                        <button class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}