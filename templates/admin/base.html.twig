<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin{% endblock %} - Anime Shop</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bangers&family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <a href="#admin-content" class="skip-to-main">Aller au contenu principal</a>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 d-md-block sidebar" role="navigation" aria-label="Navigation administration">
                <div class="position-sticky pt-3">
                    <div class="text-center mb-4">
                        <h1 style="font-family: 'Bangers', cursive; font-size: 1.5rem;">ADMIN PANEL</h1>
                    </div>
                    
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') starts with 'admin_dashboard' %}active{% endif %}" 
                               href="{{ path('admin_dashboard') }}"
                               {% if app.request.get('_route') starts with 'admin_dashboard' %}aria-current="page"{% endif %}>
                                Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') starts with 'admin_product' %}active{% endif %}" 
                               href="{{ path('admin_product_index') }}"
                               {% if app.request.get('_route') starts with 'admin_product' %}aria-current="page"{% endif %}>
                                Produits
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') starts with 'admin_category' %}active{% endif %}" 
                               href="{{ path('admin_category_index') }}"
                               {% if app.request.get('_route') starts with 'admin_category' %}aria-current="page"{% endif %}>
                                 Catégories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.get('_route') starts with 'admin_order' %}active{% endif %}" 
                               href="{{ path('admin_order_index') }}"
                               {% if app.request.get('_route') starts with 'admin_order' %}aria-current="page"{% endif %}>
                                Commandes
                            </a>
                        </li>
                        
                        <hr class="my-3" style="border-color: rgba(255,255,255,0.2);">
                        
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home') }}" target="_blank" rel="noopener">
                                 Voir le site
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">
                                 Déconnexion
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-10 ms-sm-auto main-content" id="admin-content" role="main">
                <!-- Flash messages -->
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block admin_content %}{% endblock %}
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('js/main.js') }}"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>