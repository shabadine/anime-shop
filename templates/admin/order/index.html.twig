{% extends 'admin/base.html.twig' %}

{% block title %}Commandes{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-receipt me-2"></i> Liste des commandes</h1>
</div>

<div class="card shadow-sm">
    <div class="card-header admin-order-header">
        <h5 class="mb-0"><i class="bi bi-list-ul me-1"></i> Récapitulatif</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th><i class="bi bi-hash me-1"></i> N°</th>
                        <th><i class="bi bi-person me-1"></i> Client</th>
                        <th><i class="bi bi-calendar me-1"></i> Date</th>
                        <th><i class="bi bi-currency-euro me-1"></i> Total</th>
                        <th><i class="bi bi-truck me-1"></i> Statut</th>
                        <th><i class="bi bi-gear me-1"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td><strong>{{ order.orderNumber }}</strong></td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-circle me-2 text-secondary"></i>
                                    <div>
                                        <div class="fw-bold">{{ order.user.firstName }} {{ order.user.lastName }}</div>
                                        <small class="text-muted">{{ order.user.email }}</small>
                                    </div>
                                </div>
                            </td>
                            <td><span class="badge bg-light text-dark">{{ order.createdAt|date('d/m/Y H:i') }}</span></td>
                            <td><strong class="text-danger fs-5">{{ order.totalAmount|number_format(2) }} €</strong></td>
                            <td>
                                {% if order.status == 'en_attente' %}
                                    <span class="badge admin-badge-warning">En attente</span>
                                {% elseif order.status == 'validee' %}
                                    <span class="badge admin-badge-info">Validée</span>
                                {% elseif order.status == 'expediee' %}
                                    <span class="badge admin-badge-primary">Expédiée</span>
                                {% elseif order.status == 'livree' %}
                                    <span class="badge admin-badge-success">Livrée</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a href="{{ path('admin_order_show', {id: order.id}) }}" class="btn btn-sm btn-info" title="Voir">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                     <form method="post" action="{{ path('admin_order_status', {id: order.id}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('status' ~ order.id) }}">
                                        <select name="status" class="form-select form-select-sm" onchange="this.form.submit()">
                                            <option value="en_attente" {% if order.status == 'en_attente' %}selected{% endif %}>En attente</option>
                                            <option value="validee" {% if order.status == 'validee' %}selected{% endif %}>Validée</option>
                                            <option value="expediee" {% if order.status == 'expediee' %}selected{% endif %}>Expédiée</option>
                                            <option value="livree" {% if order.status == 'livree' %}selected{% endif %}>Livrée</option>
                                        </select>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                <i class="bi bi-inbox display-4"></i><br>
                                Aucune commande
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}