{% extends 'admin/base.html.twig' %}

{% block title %}Commande {{ order.orderNumber }}{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-receipt me-2"></i> Commande {{ order.orderNumber }}</h1>
    <a href="{{ path('admin_order_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Retour à la liste
    </a>
</div>

<div class="row g-4">
    <!-- Colonne gauche : infos client + produits -->
    <div class="col-md-8">
        <!-- Informations client -->
        <div class="card shadow-sm mb-4">
            <div class="card-header admin-order-detail-header">
                <h5 class="mb-0"><i class="bi bi-person-circle me-1"></i> Informations client</h5>
            </div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-4 fw-bold">Nom</div>
                    <div class="col-sm-8">{{ order.user.firstName }} {{ order.user.lastName }}</div>
                </div>
                <div class="row mb-2">
                    <div class="col-sm-4 fw-bold">Email</div>
                    <div class="col-sm-8">{{ order.user.email }}</div>
                </div>
                <div class="row">
                    <div class="col-sm-4 fw-bold">Téléphone</div>
                    <div class="col-sm-8">{{ order.user.phone ?? 'Non renseigné' }}</div>
                </div>
            </div>
        </div>

        <!-- Produits -->
        <div class="card shadow-sm">
            <div class="card-header admin-order-detail-header">
                <h5 class="mb-0"><i class="bi bi-box-seam me-1"></i> Produits commandés</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th><i class="bi bi-image me-1"></i> Image</th>
                                <th><i class="bi bi-tag me-1"></i> Produit</th>
                                <th><i class="bi bi-currency-euro me-1"></i> Prix unitaire</th>
                                <th><i class="bi bi-hash me-1"></i> Qté</th>
                                <th><i class="bi bi-currency-euro me-1"></i> Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in order.orderItems %}
                                <tr>
                                    <td>
                                        {% if item.product.image %}
                                            <img src="{{ asset('uploads/products/' ~ item.product.image) }}" 
                                                 alt="{{ item.product.name }}" 
                                                 class="rounded shadow-sm" 
                                                 style="width: 60px; height: 60px; object-fit: cover;">
                                        {% else %}
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center shadow-sm" style="width: 60px; height: 60px;">
                                                <i class="bi bi-card-image text-muted"></i>
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td><strong>{{ item.product.name }}</strong></td>
                                    <td>{{ item.unitPrice }} €</td>
                                    <td><span class="badge bg-secondary">{{ item.quantity }}</span></td>
                                    <td><strong class="text-danger">{{ item.total }} €</strong></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <td colspan="4" class="text-end"><strong>TOTAL :</strong></td>
                                <td><strong class="text-danger fs-4">{{ order.totalAmount }} €</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Colonne droite : statut + récap -->
    <div class="col-md-4">
        <!-- Changement de statut -->
        <div class="card shadow-sm mb-4">
            <div class="card-header admin-order-detail-header">
                <h5 class="mb-0"><i class="bi bi-truck me-1"></i> Statut</h5>
            </div>
            <div class="card-body">
                <form method="post" action="{{ path('admin_order_status', {id: order.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('status' ~ order.id) }}">
                    <label class="form-label fw-bold">Mettre à jour</label>
                    <select name="status" class="form-select mb-3" onchange="this.form.submit()">
                        <option value="en_attente" {% if order.status == 'en_attente' %}selected{% endif %}>En attente</option>
                        <option value="validee" {% if order.status == 'validee' %}selected{% endif %}>Validée</option>
                        <option value="expediee" {% if order.status == 'expediee' %}selected{% endif %}>Expédiée</option>
                        <option value="livree" {% if order.status == 'livree' %}selected{% endif %}>Livrée</option>
                        <option value="annulee" {% if order.status == 'annulee' %}selected{% endif %}>Annulée</option>
                    </select>
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-check-circle me-2"></i> Mettre à jour
                    </button>
                </form>
            </div>
        </div>

        <!-- Récap commande -->
        <div class="card shadow-sm">
            <div class="card-header admin-order-detail-header">
                <h5 class="mb-0"><i class="bi bi-receipt me-1"></i> Récapitulatif</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span class="fw-bold">N° commande</span>
                    <span>{{ order.orderNumber }}</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span class="fw-bold">Date</span>
                    <span>{{ order.createdAt|date('d/m/Y à H:i') }}</span>
                </div>
                <hr>
                <div class="d-flex justify-content-between">
                    <span class="fw-bold fs-5">Total</span>
                    <span class="text-danger fw-bold fs-4">{{ order.totalAmount }} €</span>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}