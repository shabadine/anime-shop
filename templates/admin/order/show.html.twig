{% extends 'admin/base.html.twig' %}

{% block title %}Commande {{ order.orderNumber }}{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Commande {{ order.orderNumber }}</h1>
    <a href="{{ path('admin_order_index') }}" class="btn btn-secondary">← Retour</a>
</div>

<div class="row">
    <div class="col-md-8">
        <!-- Informations client -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"> Informations client</h5>
            </div>
            <div class="card-body">
                <p><strong>Nom :</strong> {{ order.user.firstName }} {{ order.user.lastName }}</p>
                <p><strong>Email :</strong> {{ order.user.email }}</p>
                <p><strong>Téléphone :</strong> {{ order.user.phone ?? 'Non renseigné' }}</p>
            </div>
        </div>

        <!-- Produits -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"> Produits</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Prix unitaire</th>
                            <th>Quantité</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in order.orderItems %}
                            <tr>
                                <td>{{ item.product.name }}</td>
                                <td>{{ item.unitPrice }}€</td>
                                <td>{{ item.quantity }}</td>
                                <td><strong>{{ item.total }}€</strong></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end"><strong>TOTAL :</strong></td>
                            <td><strong style="color: #FF6B6B; font-size: 1.2rem;">{{ order.totalAmount }}€</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Statut -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-warning">
                <h5 class="mb-0"> Statut</h5>
            </div>
            <div class="card-body">
                <form method="post" action="{{ path('admin_order_update_status', {id: order.id}) }}">
                    <select name="status" class="form-select mb-3">
                        <option value="en_attente" {% if order.status == 'en_attente' %}selected{% endif %}>En attente</option>
                        <option value="validee" {% if order.status == 'validee' %}selected{% endif %}>Validée</option>
                        <option value="expediee" {% if order.status == 'expediee' %}selected{% endif %}>Expédiée</option>
                        <option value="livree" {% if order.status == 'livree' %}selected{% endif %}>Livrée</option>
                        <option value="annulee" {% if order.status == 'annulee' %}selected{% endif %}>Annulée</option>
                    </select>
                    <button type="submit" class="btn btn-primary w-100">Mettre à jour</button>
                </form>
            </div>
        </div>

        <!-- Infos commande -->
        <div class="card shadow-sm">
            <div class="card-body">
                <p><strong>Date :</strong><br>{{ order.createdAt|date('d/m/Y à H:i') }}</p>
                <p><strong>Montant :</strong><br><span style="font-size: 1.3rem; color: #FF6B6B;">{{ order.totalAmount }}€</span></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}