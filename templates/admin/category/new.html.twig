{% extends 'admin/base.html.twig' %}

{% block title %}Nouvelle catégorie{% endblock %}

{% block admin_content %}
<h1> Nouvelle catégorie</h1>

<div class="card shadow-sm mt-4">
    <div class="card-body">
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.name) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.slug) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.description) }}
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary">Créer</button>
                <a href="{{ path('admin_category_index') }}" class="btn btn-secondary">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}