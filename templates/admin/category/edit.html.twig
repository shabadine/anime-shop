{% extends 'admin/base.html.twig' %}

{% block title %}Modifier catégorie{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-folder-check me-2"></i> Modifier catégorie</h1>
    <a href="{{ path('admin_category_index') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Retour à la liste
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header admin-form-header">
        <h5 class="mb-0"><i class="bi bi-pencil-square me-1"></i> Éditer la catégorie</h5>
    </div>
    <div class="card-body">
        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

        <div class="row g-4">
            <!-- Colonne gauche : champs -->
           <div class="card-body">
        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

        <div class="row g-4">
            <!-- Gauche : champs principaux -->
            <div class="col-md-8">
                <!-- Nom -->
                <div class="form-floating mb-3">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                    <label for="{{ form.name.vars.id }}"><i class="bi bi-tag me-1"></i> Nom</label>
                </div>

                <!-- Slug -->
                <div class="form-floating mb-3">
                    {{ form_widget(form.slug, {'attr': {'class': 'form-control', 'placeholder': 'Slug'}}) }}
                    <label for="{{ form.slug.vars.id }}"><i class="bi bi-link-45deg me-1"></i> Slug</label>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label for="{{ form.description.vars.id }}" class="form-label fw-bold">
                        <i class="bi bi-card-text me-1"></i> Description
                    </label>
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                </div>
            </div>

            <!-- Colonne droite : image -->
            <div class="col-md-4">
                <label class="form-label fw-bold"><i class="bi bi-image me-1"></i> Image de la catégorie</label>

                {% if category.image %}
                    <div class="position-relative mb-3">
                        <img src="{{ vich_uploader_asset(category, 'imageFile') }}" alt="{{ category.name }}" class="img-fluid rounded shadow-sm">
                        <div class="position-absolute top-0 end-0 m-2">
                            <a href="{{ vich_uploader_asset(category, 'imageFile') }}" class="btn btn-sm btn-light me-1" download title="Télécharger">
                                <i class="bi bi-download"></i>
                            </a>
                           <button type="submit" formaction="{{ path('admin_category_image_delete', {id: category.id}) }}" formmethod="post" class="btn btn-sm btn-danger" title="Supprimer" onclick="return confirm('Supprimer l’image ?');">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                {% else %}
                    <div class="bg-light rounded d-flex align-items-center justify-content-center mb-3" style="height: 200px;">
                        <span class="text-muted"><i class="bi bi-card-image display-6"></i><br>Aucune image</span>
                    </div>
                {% endif %}

                {{ form_row(form.imageFile, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

       <div class="d-flex gap-3 mt-4">
        <button class="btn btn-lg btn-warning px-4">
            <i class="bi bi-check-circle me-2"></i> Modifier
        </button>
        <a href="{{ path('admin_category_index') }}" class="btn btn-lg btn-outline-secondary px-4">
            <i class="bi bi-x-circle me-2"></i> Annuler
        </a>
    </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}