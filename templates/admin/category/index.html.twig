{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-folder-fill me-2"></i> Gestion des catégories</h1>
    <a href="{{ path('admin_category_new') }}" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i> Nouvelle catégorie
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th><i class="bi bi-hash me-1"></i> ID</th>
                        <th><i class="bi bi-tag me-1"></i> Nom</th>
                        <th><i class="bi bi-link-45deg me-1"></i> Slug</th>
                        <th><i class="bi bi-gear me-1"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td><strong>{{ category.name }}</strong></td>
                            <td><code>{{ category.slug }}</code></td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    <form method="post" action="{{ path('admin_category_delete', {id: category.id}) }}" onsubmit="return confirm('Supprimer cette catégorie ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                        <button class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center text-muted">
                                <i class="bi bi-inbox display-4"></i><br>
                                Aucune catégorie
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}