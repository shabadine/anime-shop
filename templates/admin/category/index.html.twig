{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1> Gestion des catégories</h1>
    <a href="{{ path('admin_category_new') }}" class="btn btn-primary"> Nouvelle catégorie</a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Slug</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td><strong>{{ category.name }}</strong></td>
                        <td>{{ category.slug }}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('admin_category_edit', {id: category.id}) }}" class="btn btn-warning">Modifier</a>
                                <form method="post" action="{{ path('admin_category_delete', {id: category.id}) }}" onsubmit="return confirm('Supprimer cette catégorie ?');" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                    <button class="btn btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucune catégorie</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}