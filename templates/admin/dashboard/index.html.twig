{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1> Dashboard Administrateur</h1>
    <div>
        <span class="badge bg-success">Connect√© : {{ app.user.email }}</span>
    </div>
</div>

<!-- Statistiques -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
            <div class="card-body">
                <h6 class="text-uppercase mb-2">Chiffre d'affaires</h6>
                <h2 class="mb-0">{{ totalRevenue|number_format(2) }}‚Ç¨</h2>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
            <div class="card-body">
                <h6 class="text-uppercase mb-2">Commandes</h6>
                <h2 class="mb-0">{{ totalOrders }}</h2>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white;">
            <div class="card-body">
                <h6 class="text-uppercase mb-2">Produits</h6>
                <h2 class="mb-0">{{ totalProducts }}</h2>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); color: white;">
            <div class="card-body">
                <h6 class="text-uppercase mb-2">Utilisateurs</h6>
                <h2 class="mb-0">{{ totalUsers }}</h2>
            </div>
        </div>
    </div>
</div>

<!-- Commandes par statut -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"> Commandes par statut</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <h3 class="text-warning">{{ ordersByStatus.en_attente }}</h3>
                        <p class="mb-0">En attente</p>
                    </div>
                    <div class="col-md-3">
                        <h3 class="text-info">{{ ordersByStatus.validee }}</h3>
                        <p class="mb-0">Valid√©es</p>
                    </div>
                    <div class="col-md-3">
                        <h3 class="text-primary">{{ ordersByStatus.expediee }}</h3>
                        <p class="mb-0">Exp√©di√©es</p>
                    </div>
                    <div class="col-md-3">
                        <h3 class="text-success">{{ ordersByStatus.livree }}</h3>
                        <p class="mb-0">Livr√©es</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Derni√®res commandes -->
<div class="row mb-4">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">üõí Derni√®res commandes</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>N¬∞ Commande</th>
                                <th>Client</th>
                                <th>Date</th>
                                <th>Montant</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for order in recentOrders %}
                                <tr>
                                    <td><strong>{{ order.orderNumber }}</strong></td>
                                    <td>{{ order.user.firstName }} {{ order.user.lastName }}</td>
                                    <td>{{ order.createdAt|date('d/m/Y H:i') }}</td>
                                    <td><strong>{{ order.totalAmount|number_format(2) }}‚Ç¨</strong></td>
                                    <td>
                                        {% if order.status == 'en_attente' %}
                                            <span class="badge bg-warning">En attente</span>
                                        {% elseif order.status == 'validee' %}
                                            <span class="badge bg-info">Valid√©e</span>
                                        {% elseif order.status == 'expediee' %}
                                            <span class="badge bg-primary">Exp√©di√©e</span>
                                        {% elseif order.status == 'livree' %}
                                            <span class="badge bg-success">Livr√©e</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_order_show', {id: order.id}) }}" class="btn btn-sm btn-primary">Voir</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center">Aucune commande</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

  <!-- Produits les plus vendus -->
<div class="col-md-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"> Top produits</h5>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                {% for row in topProducts %}
                    {% set product = row[0] %}
                    {% set totalSold = row.totalSold %}

                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ product.name }}
                        <span class="badge bg-primary rounded-pill">
                            {{ totalSold }} ventes
                        </span>
                    </li>
                {% else %}
                    <li class="list-group-item">Aucune vente</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

{% endblock %}