{% extends 'base.html.twig' %}

{% block title %}Catalogue - Anime Shop{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">Catalogue de produits</h1>

    <div class="row">
        <!-- Sidebar Filtres -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-header" style="background-color: #4ECDC4; color: white;">
                    <h5 class="mb-0"> Filtres</h5>
                </div>
                <div class="card-body">
                    <!-- Recherche -->
                    <form method="get" action="{{ path('app_catalog') }}" class="mb-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Rechercher</label>
                            <input type="text" name="search" class="form-control" placeholder="Nom, anime..." value="{{ currentSearch }}">
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Rechercher</button>
                    </form>

                    <hr>

                    <!-- Catégories -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Catégories</label>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="{{ path('app_catalog') }}" class="text-decoration-none {% if not currentCategory %}fw-bold{% endif %}">
                                    Toutes les catégories
                                </a>
                            </li>
                            {% for category in categories %}
                                <li class="mb-2">
                                    <a href="{{ path('app_catalog', {category: category.id}) }}" 
                                       class="text-decoration-none {% if currentCategory == category.id %}fw-bold text-primary{% endif %}">
                                        {{ category.name }} ({{ category.products|length }})
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                    <hr>

                    <!-- Tri -->
                    <div>
                        <label class="form-label fw-bold">Trier par</label>
                        <select class="form-select" onchange="window.location.href=this.value">
                            <option value="{{ path('app_catalog', {category: currentCategory, search: currentSearch, sort: 'name', order: 'asc'}) }}" 
                                    {% if currentSort == 'name' %}selected{% endif %}>
                                Nom A-Z
                            </option>
                            <option value="{{ path('app_catalog', {category: currentCategory, search: currentSearch, sort: 'price', order: 'asc'}) }}" 
                                    {% if currentSort == 'price' and currentOrder == 'asc' %}selected{% endif %}>
                                Prix croissant
                            </option>
                            <option value="{{ path('app_catalog', {category: currentCategory, search: currentSearch, sort: 'price', order: 'desc'}) }}" 
                                    {% if currentSort == 'price' and currentOrder == 'desc' %}selected{% endif %}>
                                Prix décroissant
                            </option>
                            <option value="{{ path('app_catalog', {category: currentCategory, search: currentSearch, sort: 'date', order: 'desc'}) }}" 
                                    {% if currentSort == 'date' %}selected{% endif %}>
                                Nouveautés
                            </option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Liste des produits -->
        <div class="col-md-9">
            {% if currentSearch or currentCategory %}
                <div class="alert alert-info">
                    <strong>Filtres actifs :</strong>
                    {% if currentSearch %}
                        Recherche: "{{ currentSearch }}"
                    {% endif %}
                    {% if currentCategory %}
                        {# Correction de la ligne 85 ici #}
                        {% for category in categories %}
                            {% if category.id == currentCategory %}
                                Catégorie: {{ category.name }}
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    <a href="{{ path('app_catalog') }}" class="btn btn-sm btn-outline-secondary ms-2">Réinitialiser</a>
                </div>
            {% endif %}

            <div class="row g-4 mb-4">
                {% for product in products %}
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm product-card">
                            <div class="card-img-top bg-light" style="height: 250px; overflow: hidden;">
                                {% if product.image %}
                                    <img src="{{ asset('uploads/products/' ~ product.image) }}" 
                                         alt="{{ product.name }}" 
                                         class="img-fluid w-100 h-100" 
                                         style="object-fit: cover;">
                                {% else %}
                                    <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                                        <span>Pas d'image</span>
                                    </div>
                                {% endif %}
                            </div>
                            <div class="card-body d-flex flex-column">
                                <span class="badge bg-secondary mb-2 align-self-start">{{ product.category.name }}</span>
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p class="text-muted small mb-2">
                                    <i>{{ product.animeName }}</i>
                                </p>
                                <p class="card-text text-truncate">{{ product.description|slice(0, 80) }}...</p>
                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="h4 mb-0" style="color: #FF6B6B;">{{ product.price }}€</span>
                                        {% if product.stock > 0 %}
                                            <span class="badge bg-success">En stock</span>
                                        {% else %}
                                            <span class="badge bg-danger">Rupture</span>
                                        {% endif %}
                                    </div>
                                    <a href="{{ path('app_product_show', {slug: product.slug}) }}" class="btn btn-primary w-100">
                                        Voir le produit
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-warning text-center">
                            <h4>Aucun produit trouvé</h4>
                            <p>Essayez de modifier vos critères de recherche.</p>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-center">
                {{ knp_pagination_render(products) }}
            </div>
        </div>
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.3s;
    }
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.2) !important;
    }
</style>
{% endblock %}