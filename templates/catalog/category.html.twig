{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Anime Shop{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Header catégorie -->
    <div class="row mb-5">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_catalog') }}">Catalogue</a></li>
                    <li class="breadcrumb-item active">{{ category.name }}</li>
                </ol>
            </nav>
            
            <div class="card shadow-sm category-header">
                <div class="card-body p-5">
                    <h1 class="display-4 mb-3">{{ category.name }}</h1>
                    {% if category.description %}
                        <p class="lead">{{ category.description }}</p>
                    {% endif %}
                    <p class="mb-0"><strong>{{ products.getTotalItemCount }} produit(s)</strong></p>
                </div>
            </div>
                    </div>
                </div>

                <!-- Liste des produits -->
                <div class="row g-4 mb-4">
                    {% for product in products %}
                        <div class="col-md-3">
                            <div class="card h-100 shadow-sm">
                                <div class="card-img-top bg-light" style="height: 200px; overflow: hidden;">
                                    {% if product.image %}
                                        <img src="{{ asset('uploads/products/' ~ product.image) }}" 
                                            alt="{{ product.name }}" 
                                            class="img-fluid w-100 h-100" 
                                            style="object-fit: cover;">
                                    {% else %}
                                        <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                                            <span>Pas d'image</span>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">{{ product.name }}</h5>
                                    <p class="text-muted small">{{ product.animeName }}</p>
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="h4 mb-0 category-price">{{ product.price }}€</span>
                                        </div>
                                        <a href="{{ path('app_product_show', {slug: product.slug}) }}" class="btn btn-primary w-100">
                                            Voir
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <div class="alert alert-warning text-center">
                                Aucun produit dans cette catégorie pour le moment.
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Pagination -->
                <div class="d-flex justify-content-center">
                    {{ knp_pagination_render(products) }}
                </div>

                <!-- Autres catégories -->
                <section class="mt-5">
                    <h3>Explorer d'autres catégories</h3>
                    <div class="row g-3 mt-3">
                        {% for cat in categories if cat.id != category.id %}
                            <div class="col-md-4">
                                <a href="{{ path('app_catalog_category', {slug: cat.slug}) }}" class="text-decoration-none">
                                    <div class="card shadow-sm h-100 category-hover-card">
                                        <div class="card-body text-center">
                                            <h5 class="card-title">{{ cat.name }}</h5>
                                            <p class="text-muted small">{{ cat.products|length }} produits</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </section>
        </div>

{% endblock %}