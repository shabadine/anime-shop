{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Anime Shop{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-danger text-decoration-none">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_catalog') }}" class="text-danger text-decoration-none">Catalogue</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ category.name }}</li>
                </ol>
            </nav>
            
            <div class="card shadow-sm border-0 overflow-hidden">
                <div class="card-body p-5 bg-dark text-white" style="background: var(--gradient-hero) !important;">
                    <h1 class="display-4 font-family-bangers mb-2 text-white">{{ category.name }}</h1>
                    {% if category.description %}
                        <p class="lead opacity-90">{{ category.description }}</p>
                    {% endif %}
                    <span class="badge bg-white text-danger rounded-pill px-3 py-2">
                        <strong>{{ products.getTotalItemCount }} produit(s) disponible(s)</strong>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        {% for product in products %}
            <div class="col-md-3">
                <article class="card h-100 shadow-sm product-card border-0">
                    <div class="card-img-top bg-light" style="height: 250px; overflow: hidden;">
                        {% if product.image %}
                            <img src="{{ asset('uploads/products/' ~ product.image) }}" 
                                 alt="{{ product.name }}" 
                                 class="w-100 h-100" 
                                 style="object-fit: cover;"
                                 loading="lazy">
                        {% else %}
                            <div class="d-flex align-items-center justify-content-center h-100 text-muted">
                                <span>Pas d'image</span>
                            </div>
                        {% endif %}
                    </div>
                    <div class="card-body d-flex flex-column p-4">
                        <h2 class="h5 card-title mb-1">{{ product.name }}</h2>
                        <p class="text-muted small mb-3"><i>{{ product.animeName }}</i></p>
                        
                        <div class="mt-auto">
                             <div class="d-flex align-items-center gap-2 mb-3">
                                {% if product.pricePromotion %}
                                    <span class="h4 mb-0 text-danger fw-bold">{{ product.pricePromotion }}€</span>
                                    <span class="text-muted text-decoration-line-through small">{{ product.price }}€</span>
                                {% else %}
                                    <span class="h4 mb-0 text-danger fw-bold">{{ product.price }}€</span>
                                {% endif %}
                            </div>
                            <a href="{{ path('app_product_show', {slug: product.slug}) }}" class="btn btn-danger w-100 rounded-pill fw-bold">
                                Voir l'article
                            </a>
                        </div>
                    </div>
                </article>
            </div>
        {% else %}
            <div class="col-12 py-5">
                <div class="alert alert-light border shadow-sm text-center">
                    <h3 class="h4 text-muted">Zut ! Aucun produit ici...</h3>
                    <p class="mb-0">Revenez plus tard ou explorez d'autres univers.</p>
                </div>
            </div>
        {% endfor %}
    </div>

    <nav class="d-flex justify-content-center mb-5" aria-label="Navigation">
        {{ knp_pagination_render(products, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
    </nav>

    <section class="mt-5 border-top pt-5">
        <h3 class="section-title text-start mb-4">Explorer d'autres univers</h3>
        <div class="row g-3">
            {% for cat in categories if cat.id != category.id %}
                <div class="col-md-4">
                    <a href="{{ path('app_catalog_category', {slug: cat.slug}) }}" class="text-decoration-none group">
                        <div class="card shadow-sm h-100 border-0 transition-all hover-shadow" style="transition: 0.3s;">
                            <div class="card-body text-center p-4">
                                <h5 class="card-title text-dark mb-1">{{ cat.name }}</h5>
                                <p class="text-muted small mb-0">{{ cat.products|length }} pépites à découvrir</p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </section>
</div>
{% endblock %}