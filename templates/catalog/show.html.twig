{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Anime Shop{% endblock %}

{% block body %}
<div class="container py-5">
    <nav aria-label="fil d'Ariane" class="mb-4">
        <ol class="breadcrumb bg-transparent p-0">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-danger text-decoration-none">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_catalog') }}" class="text-danger text-decoration-none">Catalogue</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_catalog', {category: product.category.id}) }}" class="text-danger text-decoration-none">{{ product.category.name }}</a></li>
            <li class="breadcrumb-item active" aria-current="page text-dark">{{ product.name }}</li>
        </ol>
    </nav>

    <div class="row g-5">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 product-card overflow-hidden">
                <div class="card-body p-0">
                    {% if product.image %}
                        <img src="{{ asset('uploads/products/' ~ product.image) }}" 
                             alt="Photo de {{ product.name }}" 
                             class="img-fluid w-100"
                             width="600" 
                             height="600"
                             style="transition: transform 0.5s ease; cursor: zoom-in; object-fit: cover;"
                             onmouseover="this.style.transform='scale(1.05)'" 
                             onmouseout="this.style.transform='scale(1)'">
                    {% else %}
                        <div class="d-flex align-items-center justify-content-center text-muted" role="img" aria-label="Aucune image" style="height: 500px; background: #f8f9fa;">
                            <span aria-hidden="true">Pas d'image disponible</span>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <span class="badge bg-dark rounded-pill px-3">{{ product.category.name }}</span>
                {% if product.featured %}
                    <span class="badge bg-danger rounded-pill px-3">Coup de cœur <i class="bi bi-heart-fill ms-1"></i></span>
                {% endif %}
            </div>

            <h1 class="h2 card-title mb-1">{{ product.name }}</h1>
            
            <p class="lead text-muted mb-4">
                <i class="bi bi-film me-2"></i>Univers : <strong class="text-dark">{{ product.animeName }}</strong>
            </p>

            <div class="mb-4">
                <div class="d-flex align-items-center flex-wrap gap-2 mb-3">
                    {% if product.pricePromotion %}
                        <span class="h3 mb-0 text-danger fw-bold">{{ product.pricePromotion }}€</span>
                        <span class="text-muted text-decoration-line-through small">{{ product.price }}€</span>
                        <span class="badge bg-warning text-dark rounded-pill small fw-bold">
                            -{{ ((1 - (product.pricePromotion / product.price)) * 100)|round }}%
                        </span>
                    {% else %}
                        <span class="h3 mb-0 text-danger fw-bold">{{ product.price }}€</span>
                    {% endif %}
                </div>
            </div>

            <div class="mb-4">
                {% if product.stock > 0 %}
                    <div class="d-inline-flex align-items-center text-success fw-bold">
                        <i class="bi bi-check-circle-fill me-2"></i> En stock ({{ product.stock }} unités)
                    </div>
                {% else %}
                    <div class="d-inline-flex align-items-center text-secondary fw-bold">
                        <i class="bi bi-x-circle-fill me-2"></i> Rupture de stock
                    </div>
                {% endif %}
            </div>

            {% if product.stock > 0 %}
                <form method="post" action="{{ path('app_cart_add', {id: product.id}) }}" class="bg-light p-4 rounded-4 shadow-sm mb-4">
                    <div class="row align-items-end g-3">
                        <div class="col-sm-4">
                            <label for="quantity" class="form-label fw-bold small text-uppercase">Quantité</label>
                            <div class="input-group">
                                <button class="btn btn-white border" type="button" onclick="decreaseQty()" aria-label="Diminuer la quantité">
                                    <i class="bi bi-dash"></i>
                                </button>
                                <input type="number" class="form-control text-center border-x-0" id="quantity" name="quantity" value="1" min="1" max="{{ product.stock }}" aria-label="Quantité sélectionnée">
                                <button class="btn btn-white border" type="button" onclick="increaseQty()" aria-label="Augmenter la quantité">
                                    <i class="bi bi-plus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <button type="submit" class="btn btn-danger btn-lg w-100 rounded-pill fw-bold shadow-sm py-3">
                                <i class="bi bi-cart-plus me-2"></i> Ajouter au panier
                            </button>
                        </div>
                    </div>
                </form>
            {% endif %}

            <div class="accordion border-0" id="productDetails">
                <div class="accordion-item border-0 border-bottom">
                    <h2 class="accordion-header">
                        <button class="accordion-button bg-transparent fw-bold px-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#descContent">
                            Description du produit
                        </button>
                    </h2>
                    <div id="descContent" class="accordion-collapse collapse show">
                        <div class="accordion-body px-0 text-muted">
                            {{ product.description }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if similarProducts %}
        <section class="mt-5 pt-5">
            <h2 class="section-title text-start mb-4">Vous aimerez aussi</h2>
            <div class="row g-4">
                {% for similarProduct in similarProducts %}
                    <div class="col-md-3">
                        <article class="card h-100 shadow-sm border-0 product-card">
                            <div class="bg-dark text-white p-2 text-center">
                                <span class="small fw-bold">{{ similarProduct.category.name }}</span>
                            </div>
                            <div class="card-img-top bg-light" style="height: 200px; overflow: hidden;">
                                {% if similarProduct.image %}
                                    <img src="{{ asset('uploads/products/' ~ similarProduct.image) }}" 
                                         class="w-100 h-100" 
                                         style="object-fit: cover;" 
                                         alt="{{ similarProduct.name }}"
                                         width="300"
                                         height="200">
                                {% endif %}
                            </div>
                            <div class="card-body d-flex flex-column p-3">
                                <h3 class="h6 card-title mb-1">{{ similarProduct.name }}</h3>
                                <p class="text-muted small mb-2">{{ similarProduct.animeName }}</p>
                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    <span class="fw-bold text-danger">{{ similarProduct.pricePromotion ?: similarProduct.price }}€</span>
                                    <a href="{{ path('app_product_show', {slug: similarProduct.slug}) }}" class="btn btn-sm btn-outline-danger rounded-pill px-3">Voir</a>
                                </div>
                            </div>
                        </article>
                    </div>
                {% endfor %}
            </div>
        </section>
    {% endif %}
</div>

<script>
    function increaseQty() {
        const input = document.getElementById('quantity');
        const max = parseInt(input.getAttribute('max'));
        if (parseInt(input.value) < max) input.value = parseInt(input.value) + 1;
    }
    function decreaseQty() {
        const input = document.getElementById('quantity');
        if (parseInt(input.value) > 1) input.value = parseInt(input.value) - 1;
    }
</script>
{% endblock %}