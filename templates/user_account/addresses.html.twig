{% extends 'base.html.twig' %}

{% block title %}Mes adresses - Anime Shop{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Mes adresses</h1>
        <a href="{{ path('app_account_address_new') }}" class="btn btn-primary">
         Ajouter une nouvelle adresse
            <i class="bi bi-plus-lg"></i>
        </a>
    </div>

    {% if addresses is empty %}
        <div class="alert alert-info text-center">
            <p>Vous n'avez pas encore d'adresse enregistr√©e.</p>
        </div>
    {% else %}
        <div class="row g-4">
            {% for address in addresses %}
                <div class="col-md-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h2 class="card-title h5 mb-0">{{ address.fullName }}</h2>
                                <span class="badge bg-primary">{{ address.type|capitalize }}</span>
                            </div>
                            <p class="mb-1">{{ address.street }} </p>
                            <p class="mb-1">{{ address.zipCode }} {{ address.city }}</p>
                            <p class="mb-3">{{ address.country }}</p>

                             <div class="d-flex gap-2">
                                <a href="{{ path('app_account_address_edit', {id: address.id}) }}" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil"></i> Modifier
                                </a>
                                <form method="post" action="{{ path('app_account_address_delete', {id: address.id}) }}" onsubmit="return confirm('Supprimer cette adresse ?');" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ address.id) }}">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}