{% extends 'base.html.twig' %}

{% block title %}Mes commandes - Anime Shop{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h2">Mon historique de <span class="text-primary">commandes</span></h1>
            <p class="text-muted">Retrouvez ici tous vos achats effectués sur Anime Shop.</p>
        </div>
    </div>

    {% if orders is empty %}
        <div class="text-center py-5 border rounded bg-light">
            <div class="mb-3">
                <i class="bi bi-cart-x" style="font-size: 4rem; color: #dee2e6;"></i>
            </div>
            <h4>Aucune commande pour le moment</h4>
            <p class="text-muted mb-4">Votre historique est vide. C'est le moment idéal pour craquer sur une nouvelle figurine !</p>
            <a href="{{ path('app_catalog') }}" class="btn btn-primary px-4 shadow">
                Explorer le catalogue
            </a>
        </div>
    {% else %}
        <div class="card shadow-sm overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">N° Commande</th>
                            <th>Date</th>
                            <th>Articles</th>
                            <th>Total</th>
                            <th>Statut</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in orders %}
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-bold text-dark">#{{ order.orderNumber }}</span>
                                </td>
                                <td>{{ order.createdAt|date('d/m/Y') }}</td>
                                <td>
                                    <span class="badge rounded-pill bg-secondary">
                                        {{ order.orderItems|length }} article(s)
                                    </span>
                                </td>
                                <td>
                                    <span class="fw-bold">{{ order.totalAmount|number_format(2, ',', ' ') }} €</span>
                                </td>
                                <td>
                                    {% if order.status == 'en_attente' %}
                                        <span class="badge bg-warning text-dark">En attente</span>
                                    {% elseif order.status == 'validee' %}
                                        <span class="badge bg-info">Validée</span>
                                    {% elseif order.status == 'expediee' %}
                                        <span class="badge bg-primary">Expédiée</span>
                                    {% elseif order.status == 'livree' %}
                                        <span class="badge bg-success">Livrée</span>
                                    {% else %}
                                        <span class="badge bg-danger">Annulée</span>
                                    {% endif %}
                                </td>
                                <td class="text-end pe-4">
                                    <a href="{{ path('app_account_order_show', {id: order.id}) }}" 
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        Voir les détails
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(78, 205, 196, 0.05);
    }
</style>
{% endblock %}