{% extends 'base.html.twig' %}

{% block title %}Mon compte - Anime Shop{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">Mon compte</h1>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="mb-3" style="font-size: 4rem;"></div>
                    <h2 class="card-title h5">{{ user.firstName }} {{ user.lastName }}</h2>
                    <p class="text-muted">{{ user.email }}</p>
                    <a href="{{ path('app_account_profile') }}" class="btn btn-primary">
                        Gérer mon profil
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="mb-3" style="font-size: 4rem;"></div>
                    <h2 class="card-title h5">Mes commandes</h2>
                    <p class="text-muted">{{ user.orders|length }} commande(s)</p>
                    <a href="{{ path('app_account_orders') }}" class="btn btn-primary">
                        Voir mes commandes
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="mb-3" style="font-size: 4rem;"></div>
                    <h2 class="card-title h5">Mes adresses</h2>
                    <p class="text-muted">{{ user.addresses|length }} adresse(s)</p>
                    <a href="{{ path('app_account_addresses') }}" class="btn btn-primary">
                        Gérer mes adresses
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}