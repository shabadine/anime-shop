{% extends 'base.html.twig' %}

{% block title %}Préparer ma commande - Anime Shop{% endblock %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4">Validation de la commande</h1>

    <div class="row">
        <div class="col-lg-8">
            <!-- Adresses -->
            <div class="card shadow-sm mb-4">
                 <div class="card-header order-section-header">
                    <h5 class="mb-0">Adresse de livraison <i class="bi bi-truck"></i></h5>
                </div>
                <div class="card-body">
                    {% if addresses is empty %}
                        <p>Vous n'avez pas d'adresse enregistrée. <i class="bi bi-exclamation-triangle"></i></p>
                        <a href="#" class="btn btn-primary">Ajouter une adresse <i class="bi bi-plus-circle"></i></a>
                    {% else %}
                        {% for address in addresses %}
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" name="address" id="address{{ address.id }}" checked>
                                <label class="form-check-label" for="address{{ address.id }}">
                                    <strong>{{ address.fullName }}</strong><br>
                                    {{ address.street }}<br>
                                    {{ address.zipCode }} {{ address.city }}<br>
                                    {{ address.country }}
                                </label>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>

            <!-- Récapitulatif produits -->
            <div class="card shadow-sm">
                 <div class="card-header order-section-header">
                    <h5 class="mb-0">Récapitulatif des produits <i class="bi bi-cart"></i></h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            {% for item in items %}
                                <tr>
                                    <td>{{ item.product.name }} x{{ item.quantity }}</td>
                                    <td class="text-end">{{ (item.product.price * item.quantity)|number_format(2) }}€</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header" style="background-color: #FFE66D;">
                    <h5 class="mb-0">Total <i class="bi bi-currency-dollar"></i></h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Sous-total :</span>
                        <strong>{{ total|number_format(2) }}€</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Livraison :</span>
                        <strong>5.00€</strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>TOTAL :</strong>
                       <strong class="order-total-price">{{ (total + 5)|number_format(2) }}€</strong>
                    </div>

                    <a href="{{ path('app_order_payment') }}" class="btn btn-primary w-100 btn-lg order-payment-btn">
                        Paiement <i class="bi bi-credit-card-2-front"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}